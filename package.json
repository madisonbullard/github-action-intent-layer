{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "github-action-intent-layer",
	"version": "0.1.0-alpha.2",
	"type": "module",
	"private": true,
	"packageManager": "bun@1.3.5",
	"module": "index.ts",
	"scripts": {
		"build": "esbuild index.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/index.js",
		"check": "bun biome check",
		"prepare": "husky",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"act": "act push",
		"act:list": "act -l",
		"act:github-tests": "act workflow_dispatch --input run_github_tests=true -s GITHUB_TOKEN",
		"act:llm-tests": "act workflow_dispatch --input run_llm_tests=true -s OPENROUTER_API_KEY",
		"act:intent-layer": "act pull_request -W .github/workflows/intent-layer.yml -s OPENROUTER_API_KEY"
	},
	"dependencies": {
		"@actions/core": "2.0.1",
		"@actions/github": "6.0.1",
		"@opencode-ai/sdk": "1.0.224",
		"diff": "8.0.2",
		"ignore": "7.0.5",
		"minimatch": "10.1.1",
		"yaml": "2.8.2",
		"zod": "4.3.4"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@tsconfig/bun": "1.0.10",
		"@types/bun": "1.3.5",
		"@types/diff": "8.0.0",
		"@types/node": "^22.19",
		"esbuild": "^0.25.0",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"typescript": "5.9.3"
	}
}
